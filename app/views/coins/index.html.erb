<p style="color: green"><%= notice %></p>

<h1>Moedas</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th><%= @coins.human_attribute_name(:description) %></th>
    <th><%= @coins.human_attribute_name(:acronym) %></th>
    <th><%= @coins.human_attribute_name(:url_image) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td> <%= image_tag coin.url_image, size: "25x25" %>
      <th><%= link_to t('links.show'), coin %></th>
      <th><%= link_to t('links.edit'), edit_coin_path(coin) %></th>
      <th><%= link_to t('links.delete'), coin, method: :delete %></th>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "New coin", new_coin_path %>
